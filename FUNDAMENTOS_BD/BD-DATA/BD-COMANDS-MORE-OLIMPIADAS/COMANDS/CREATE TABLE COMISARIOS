**CREACION TABLAS**

CREATE TABLE COMISARIOS 
(ID_COMISARIOS INT(10) PRIMARY KEY,TIPO VARCHAR(20));

CREATE TABLE COMPLEJO_POLIDEPORTIVO 
(ID_COMPLEJO_POLIDEPORTIVO INT(10) PRIMARY KEY,ID_COMPLEJO_DEPORTIVO INT(10),JEFE_ORGANIZACION VARCHAR(20),AREA_TOTAL VARCHAR(10),INDICACION VARCHAR(30));


CREATE TABLE COMPLEJO_DEPORTIVO_UNICO 
(ID_COMPLEJO_DEPORTIVO_UNICO INT(10) PRIMARY KEY,ID_COMPLEJO_DEPORTIVO INT(10),JEFE_ORGANIZACION VARCHAR(20),AREA_TOTAL VARCHAR(10),INDICACION VARCHAR(20));


CREATE TABLE COMPLEJO_DEPORTIVO
(ID_COMPLEJO_DEPORTIVO INT(10) PRIMARY KEY,CLAVE INT(10),JEFE_ORGANIZACION VARCHAR(20),AREA_TOTAL VARCHAR(10),LOCALIZACION VARCHAR(20));

CREATE TABLE EQUIPAMENTO 
(ID_EQUIPAMENTO INT(10) PRIMARY KEY,TIPO VARCHAR(10));

CREATE TABLE EVENTO 
(ID_EVENTO INT(10) PRIMARY KEY,ID_EQUIPAMENTO INT(10),ID_COMISARIOS INT(10),ID_SEDE_OLIMPICA INT(10),NOMBRE VARCHAR(20),FECHA DATE,DURACION TIME);

CREATE TABLE MANTENIMIENTO 
(ID_MANTENIMIENTO INT(10) PRIMARY KEY,ID_EQUIPAMENTO INT(10));

CREATE TABLE SEDE_OLIMPICA 
(ID_SEDE_OLIMPICA INT(10) PRIMARY KEY,CLAVE INT(10),ID_COMPLEJO_DEPORTIVO INT(10),UBICACION VARCHAR(20),PRESUPUESTO DOUBLE);

CREATE TABLE TIPO_COMPLEJO 
(CLAVE INT(10) PRIMARY KEY,DESCRIPCION VARCHAR(20));


**INDICES**

*COMPLEJO POLIDEPORTIVO*
CREATE UNIQUE INDEX DEPORTIVO ON COMPLEJO_POLIDEPORTIVO (ID_COMPLEJO_DEPORTIVO);

*COMPLEJO DEPORTIVO*
CREATE UNIQUE INDEX CLAVE ON COMPLEJO_DEPORTIVO (CLAVE);

*COMPLEJO DEPORTIVO UNICO*
CREATE UNIQUE INDEX DEPORTIVO ON COMPLEJO_DEPORTIVO_UNICO (ID_COMPLEJO_DEPORTIVO);

*EVENTO*
CREATE UNIQUE INDEX EQUIPAMENTO ON EVENTO (ID_EQUIPAMENTO);
CREATE UNIQUE INDEX DEPORTIVO ON EVENTO (ID_COMISARIOS);
CREATE UNIQUE INDEX SEDE ON EVENTO (ID_SEDE_OLIMPICA);


*MANTENIMIENTO*
CREATE UNIQUE INDEX EQUIPAMENTO ON MANTENIMIENTO (ID_EQUIPAMENTO);

*SEDE OLIMPICA*
CREATE UNIQUE INDEX CLAVE ON SEDE_OLIMPICA (CLAVE);
CREATE UNIQUE INDEX DEPORTIVO ON SEDE_OLIMPICA (ID_COMPLEJO_DEPORTIVO);

**RELACIONES**

*SEDE OLIMPICA*

ALTER TABLE SEDE_OLIMPICA ADD FOREIGN KEY (ID_COMPLEJO_DEPORTIVO) REFERENCES COMPLEJO_DEPORTIVO (ID_COMPLEJO_DEPORTIVO) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE SEDE_OLIMPICA ADD FOREIGN KEY (CLAVE) REFERENCES TIPO_COMPLEJO (CLAVE) ON DELETE CASCADE ON UPDATE CASCADE;

*COMPLEJO DEPORTIVO*

ALTER TABLE COMPLEJO_DEPORTIVO ADD FOREIGN KEY (CLAVE) REFERENCES TIPO_COMPLEJO (CLAVE) ON DELETE CASCADE ON UPDATE CASCADE;

*COMPLEJO DEPORTIVO UNICO*

ALTER TABLE COMPLEJO_DEPORTIVO_UNICO ADD FOREIGN KEY (ID_COMPLEJO_DEPORTIVO) REFERENCES COMPLEJO_DEPORTIVO (ID_COMPLEJO_DEPORTIVO) ON DELETE CASCADE ON UPDATE CASCADE;

*COMPLEJO POLIDEPORTIVO*

ALTER TABLE COMPLEJO_POLIDEPORTIVO ADD FOREIGN KEY (ID_COMPLEJO_DEPORTIVO) REFERENCES COMPLEJO_DEPORTIVO (ID_COMPLEJO_POLIDEPORTIVO) ON DELETE CASCADE ON UPDATE CASCADE;

*EVENTO*

ALTER TABLE EVENTO ADD FOREIGN KEY (ID_EQUIPAMENTO) REFERENCES EQUIPAMENTO (ID_EQUIPAMENTO) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE EVENTO ADD FOREIGN KEY (ID_COMISARIOS) REFERENCES COMISARIOS (ID_COMISARIOS) ON DELETE CASCADE ON UPDATE CASCADE;

ALTER TABLE EVENTO ADD FOREIGN KEY (ID_SEDE_OLIMPICA) REFERENCES SEDE_OLIMPICA (ID_SEDE_OLIMPICA) ON DELETE CASCADE ON UPDATE CASCADE;

*MANTENIMIENTO*

ALTER TABLE MANTENIMIENTO ADD FOREIGN KEY (ID_EQUIPAMENTO) REFERENCES EQUIPAMENTO (ID_EQUIPAMENTO) ON DELETE CASCADE ON UPDATE CASCADE;
